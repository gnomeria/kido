---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Kido - Baby Growth Tracker">
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Welcome to Kido</h1>
        <p class="py-6">Modern baby growth tracking made simple</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/add-child" class="btn btn-primary btn-lg">Add Child</a>
          <a href="/children" class="btn btn-secondary btn-lg">My Children</a>
          <a href="/dashboard" class="btn btn-outline btn-lg">Dashboard</a>
        </div>
      </div>
    </div>
  </div>
</Layout>